<%- include("partials/header") %>
<%- include("partials/background.ejs")%>
<div class="container-fluid landing-page">

    <header class="landing">
        <!-- <div class="landing-bg"></div> -->
        <div class="flex-row">
            <div class="fest-logo">
                <a href="https://arhn.in">
                    <img src="img/aarohan-logo.png">
                </a>
            </div>
            <div class="sponsor-logo">
                <!-- Insert the sponsor logos here -->
            </div>
        </div>
        <div class="content">
            <div class="login-area">
                <img class="freemex-logo" src="img/logo.png"/>
                <p class="nasdaq-intro">IEX Timings: 7:00PM - 1:30AM</p>
                <% if (event_started||player==-1){ %>
                    <div class="login-buttons flex-row">
                        <div class="google">
                            <a class="btn btn-gplus" href="/auth/google" role="button">
                                <span><i class="fa fa-google-plus left"></i></span>
                            </a>
                        </div>
                        <div class="github">
                            <a class="btn btn-github" href="/auth/github" role="button">
                                <span><i class="fa fa-github left"></i></span>
                            </a>
                        </div>
                    </div>
                <%} else {%>
                    <div class="white-text">
                        <h1>Freemex has not started yet. Stay tuned!</h1>
                                <span id="days" class="huge-text">00</span>
                                <span class="huge-text">:</span>
                                <span id="hours" class="huge-text">00</span>
                                <span class="huge-text">:</span>
                                <span id="minutes" class="huge-text">00</span>
                                <span class="huge-text">:</span>
                                <span id="seconds" class="huge-text">00</span>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="text-center">
            <a href="#rules" class="text-center">Rules</a>
        </div>
    </header>
    <div id="rules">
        <%- include ("partials/rules") %>
    </div>
    <div class="text-right"><a href="#"><i class="fa fa-arrow-up bounce-3" aria-hidden="true"></i></a></div>

</div>

<script type="text/javascript" src="/js/timer.js"></script>
<script type="text/javascript" src="/js/bg-2025.js"></script>


<%- include("partials/footer") %>